{
  "name": "unblurry",
  "version": "0.1.0",
  "description": "A privacy-focused desktop app that helps you see your work habits clearly",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev:main": "tsc -p tsconfig.main.json",
    "dev:renderer": "vite --port 5173",
    "dev": "npm run dev:main && concurrently -k \"npm run dev:renderer\" \"wait-on tcp:5173 && electron .\"",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "test": "vitest run",
    "test:watch": "vitest",
    "seed": "ELECTRON_RUN_AS_NODE=1 electron ./node_modules/.bin/tsx scripts/seed-test-data.ts",
    "seed:clear": "ELECTRON_RUN_AS_NODE=1 electron ./node_modules/.bin/tsx scripts/seed-test-data.ts --clear",
    "dist": "npm run build && electron-builder --mac"
  },
  "build": {
    "appId": "com.unblurry.app",
    "productName": "Unblurry",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**",
      "node_modules/active-win/**"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "x64ArchFiles": "Contents/Resources/app.asar.unpacked/**",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Imane-Idrissi/self-reflection-app.git"
  },
  "author": "Imane Idrissi",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "active-win": "^8.2.1",
    "better-sqlite3": "^12.6.2",
    "posthog-js": "^1.356.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "tailwindcss": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  }
}
