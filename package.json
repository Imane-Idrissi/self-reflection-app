{
  "name": "self-reflection-app",
  "version": "0.1.0",
  "description": "A privacy-focused desktop app for behavioral self-reflection",
  "main": "dist/main/main.js",
  "scripts": {
    "dev:main": "tsc -p tsconfig.main.json",
    "dev:renderer": "vite --port 5173",
    "dev": "npm run dev:main && concurrently -k \"npm run dev:renderer\" \"wait-on tcp:5173 && electron .\"",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Imane-Idrissi/self-reflection-app.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}
